<div class="echo-auth">
  <h1 class="echo-title">Edit Account<h1>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="auth-form">
      <%= f.input :email, required: true, autofocus: true,
                  input_html: {placeholder: "example@gmail.com", class: "auth-input"},
                  label: false %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :nickname,
                  required: false,
                  input_html: { placeholder: "Username", class: "auth-input" },
                  label: false %>
      <%= f.input :avatar,
                  as: :file,
                  required: false,
                  input_html: {class: "auth-input" },
                  label: false %>
      <%= f.input :password,
                  hint: "Leave it blank if you don't want to change it",
                  required: false,
                  input_html: { autocomplete: "new-password", placeholder: "New password", class: "auth-input" },
                  hint_html: { class: "hint-small" },
                  label: false %>
      <%= f.input :password_confirmation,
                  required: false,
                  input_html: { autocomplete: "new-password", placeholder: "Confirm password", class: "auth-input" },
                  label: false %>
      <%= f.input :current_password,
                  hint: "We need your current password to confirm your changes",
                  required: true,
                  input_html: { autocomplete: "current-password", placeholder: "Current password", class: "auth-input" },
                  hint_html: { class: "hint-small" },
                  label: false %>
      <%= f.button :submit, "Update", class: "auth-button" %>
    </div>
  <% end %>

  <h3 class="echo-title mt-5">Unhappy?</h3>

  <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" },
  method: :delete, class: "auth-button-red" %>

</div>
