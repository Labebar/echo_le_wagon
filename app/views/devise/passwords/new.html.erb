<div class="echo-auth">
  <h1 class="echo-title">Forgot your password?</h1>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <div class="auth-form">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email", placeholder: "example@gmail.com", class: "auth-input" },
                  label: false %>

      <%= f.button :submit, "Send reset instructions", class: "auth-button" %>
    </div>
  <% end %>

  <div class="auth-legal">
    <%= render "devise/shared/links" %>
  </div>
</div>
