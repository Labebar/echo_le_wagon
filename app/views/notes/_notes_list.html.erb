<% notes.each do |note| %>
  <div id="note_<%= note.id %>" class="note-card">
    <div class="note-header">
      <span class="note-timestamp">
        @<%= note.created_at.in_time_zone('Paris').strftime("%H:%M") %> <span class="time-ago"><%= time_ago_in_words(note.created_at.in_time_zone('Paris')) %></span>
      </span>
    </div>
    <div class="note-body">
      <p><%= note.description %></p>
    </div>
    <%= link_to "Supprimer", content_note_path(note.content, note), 
                class: "btn red-round-button", 
                data: { turbo_method: :delete, turbo_confirm: "Êtes-vous sûr ?" } %>
  </div>
<% end %>