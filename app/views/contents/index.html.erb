<div class="container">
  <%= form_with model: @content, local: true do |form| %>
    <div class="form-group">
      <%= form.label :url, 'Entrez une URL :' %>
      <%= form.url_field :url, class: 'form-control', placeholder: 'https://exemple.com', required: true %>
    </div>
    <div class="form-group mt-3">
      <%= form.submit 'Commencez maintenant', class: 'btn btn-primary' %>
    </div>
  <% end %>
  <h1>Tes vidéos</h1>
  <% @contents.each do |content| %>
  <div class="card">
    <%=image_tag content.thumbnail, class:"card-img-top" %>
    <div class="card-body">
    <p><%= content.name %></p>
    <p>Durée : <%= format_duration(content.duration) %></p>
    <%= link_to 'Voir plus', content_path(content), class: 'btn btn-primary' %>
    </div>
  </div>
  <% end %>
</div>
