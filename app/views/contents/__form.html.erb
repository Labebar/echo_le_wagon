<%= form_with model: @content, local: true do |form| %>
  <div class="form-group">
    <%= form.label :url, 'Entrez une URL :' %>
    <%= form.url_field :url, class: 'form-control', placeholder: 'https://exemple.com', required: true %>
  </div>
  <div class="form-group mt-3">
    <%= form.submit 'Commencez maintenant', class: 'btn btn-primary' %>
  </div>
<% end %>
